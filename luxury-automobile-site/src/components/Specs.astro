---
const { specs } = Astro.props;
---
<section class="py-12 snap-start">
  <div class="max-w-6xl mx-auto px-6">
    <div class="bg-white rounded-lg p-6 shadow-sm">
      <h3 class="text-sm font-medium tracking-wide text-gray-700 mb-4">Technical Specs</h3>
      <dl class="grid grid-cols-2 gap-4 text-sm text-gray-800">
        {specs.map((s) => (
          <div>
              <dt class="text-xs text-gray-500">{s.label}</dt>
              <dd class="font-medium mt-1">{s.value}</dd>
            </div>
        ))}
      </dl>
    </div>
  </div>
</section>
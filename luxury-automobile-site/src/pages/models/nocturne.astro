---
import Layout from '../../components/Layout.astro';
import Hero from '../../components/Hero.astro';
import Specs from '../../components/Specs.astro';
import Highlights from '../../components/Highlights.astro';

const images = {
  hero: '/images/nocturne/big.webp',
  details: [
    '/images/nocturne/240814_AM370_SHOT_03_REAR_100_RGB_72.webp',
    '/images/nocturne/Image20240819140622_side.webp',
    '/images/nocturne/Vanquish Seat All Models Trio.webp'
  ]
};

const specs = [
  { label: 'Horsepower', value: '560 hp' },
  { label: 'Torque', value: '520 lb-ft' },
  { label: 'Top Speed', value: '195 mph' },
  { label: '0-60 mph', value: '3.6s' }
];

const highlights = [
  'Night-forward aesthetic with adaptive ambient lighting',
  'Tactile controls and quiet cabin',
  'Balanced performance for urban and open roads',
  'Low visual clutter and refined surfaces'
];
---

<Layout title="Nocturne">
  <Hero title="Nocturne" tagline="Darkness refined â€” beauty in restraint." image={images.hero} minHeight={'85vh'} />

  <section class="max-w-6xl mx-auto px-6 py-10">
    <div class="max-w-3xl">
      <p class="text-gray-700 text-lg">
        Nocturne is composed around the intimacy of the drive: quiet, focused, and unmistakable in presence. Its cabin is intentionally restrained and tuned to reduce visual noise, allowing the drive to be the centerpiece.
      </p>
    </div>
  </section>

  <Highlights highlights={highlights} />
  <Specs specs={specs} />

  <section class="py-16">
    <div class="max-w-6xl mx-auto px-6">
      <h2 class="text-2xl font-light mb-12 text-gray-900">Design Details</h2>
      <div class="grid gap-8 grid-cols-1 md:grid-cols-3">
        {images.details.map((img, idx) => (
          <img
            src={img}
            alt={`Nocturne detail ${idx + 1}`}
            class="rounded-lg shadow-md w-full object-cover h-96 md:h-full"
          />
        ))}
      </div>
    </div>
  </section>
</Layout>
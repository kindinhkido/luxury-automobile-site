---
import Layout from '../../components/Layout.astro';
import Hero from '../../components/Hero.astro';
import Specs from '../../components/Specs.astro';
import Highlights from '../../components/Highlights.astro';

const images = {
  hero: '/images/aurora/big.webp',
  details: [
    '/images/aurora/Brake overlay final.webp',
    '/images/aurora/Vantage S Seats All Models.webp',
    '/images/aurora/Vantage S Side All Models.webp'
  ]
};

const specs = [
  { label: 'Horsepower', value: '620 hp' },
  { label: 'Torque', value: '664 lb-ft' },
  { label: 'Top Speed', value: '205 mph' },
  { label: '0-60 mph', value: '3.1s' }
];

const highlights = [
  'Precision-tuned V8 with handcrafted details',
  'Carbon-fiber roof, lightweight chassis',
  'Adaptive suspension for refined handling',
  'Minimalist interior with bespoke leather finishes'
];
---

<Layout title="Aurora">
  <Hero title="Aurora" tagline="The pure line of power and serenity." image={images.hero} minHeight={'85vh'} />

  <section class="max-w-6xl mx-auto px-6 py-10">
    <div class="max-w-3xl">
      <p class="text-gray-700 text-lg">
        Sculpted silhouettes and a quiet hum make the Aurora an instrument of contemplative performance.
        Built for those who prefer intensity with impeccable restraint.
      </p>
    </div>
  </section>

  <Highlights highlights={highlights} />

  <Specs specs={specs} />

  <section class="py-16">
    <div class="max-w-6xl mx-auto px-6">
      <h2 class="text-2xl font-light mb-12 text-gray-900">Design Details</h2>
      <div class="grid gap-8 grid-cols-1 md:grid-cols-3">
        {images.details.map((img, idx) => (
          <img
            src={img}
            alt={`Aurora detail ${idx + 1}`}
            class="rounded-lg shadow-md w-full object-cover h-96 md:h-full"
          />
        ))}
      </div>
    </div>
  </section>

</Layout>
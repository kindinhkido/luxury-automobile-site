---
import Layout from '../../components/Layout.astro';
import Hero from '../../components/Hero.astro';
import Specs from '../../components/Specs.astro';
import Highlights from '../../components/Highlights.astro';

const images = {
  hero: '/images/veritas/big.webp',
  details: [
    '/images/veritas/Valkyrie_1.webp',
    '/images/veritas/Valkyrie_2.webp',
    '/images/veritas/Valkyrie_3.webp'
  ]
};

const specs = [
  { label: 'Horsepower', value: '720 hp' },
  { label: 'Torque', value: '700 lb-ft' },
  { label: 'Top Speed', value: '210 mph' },
  { label: '0-60 mph', value: '2.8s' }
];

const highlights = [
  'Track-focused performance with refined luxury',
  'Bare-metal finishes and precision engineering',
  'Advanced aerodynamics in a calm form',
  'Driver-first focus for confident control'
];
---

<Layout title="Veritas">
  <Hero title="Veritas" tagline="Absolute truth in performance." image={images.hero} minHeight={'85vh'} />

  <section class="max-w-6xl mx-auto px-6 py-10">
    <div class="max-w-3xl">
      <p class="text-gray-700 text-lg">
        Veritas is designed to be the understated apex of performance â€” delivering immediacy without unnecessary noise. Sculpted components and controlled dynamics work together to deliver the utmost in tactile driving experience.
      </p>
    </div>
  </section>

  <Highlights highlights={highlights} />
  <Specs specs={specs} />

  <section class="py-16">
    <div class="max-w-6xl mx-auto px-6">
      <h2 class="text-2xl font-light mb-12 text-gray-900">Design Details</h2>
      <div class="grid gap-8 grid-cols-1 md:grid-cols-3">
        {images.details.map((img, idx) => (
          <img
            src={img}
            alt={`Veritas detail ${idx + 1}`}
            class="rounded-lg shadow-md w-full object-cover h-96 md:h-full"
          />
        ))}
      </div>
    </div>
  </section>
</Layout>